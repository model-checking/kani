   4|     | //! Test that the abort() function is respected and nothing beyond it will execute.\
   5|     | \
   6|     | use std::process;\
   7|     | \
   8|     | #[kani::proof]\
   9|    2| fn main() {\
  10|    2|     for i in 0..4 {\
  11|     |         if i == 1 {\
  12|     |             // This comes first and it should be reachable.\
  13|    2|             process::abort();\
  14|    2|         }\
  15|    2|         if i == 2 {\
  16|     |             // This should never happen.\
  17|    0|             process::exit(1);\
  18|    2|         }\
  19|     |     }\
  20|    0|     ```assert!'''(false, ```"This is unreachable"''');\
  21|     | }\
